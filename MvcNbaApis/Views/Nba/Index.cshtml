@model List<Equipo>

<style>
    body {
        background-image: url("/varios/fondoEquiposNba.jpg");
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

    .team-link {
        display: block;
        background-color: #f9f9f9;
        border: 1px solid #ddd;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
        margin-bottom: 20px;
        height: 340px; /* Ajustamos la altura de las cajas */
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .team-link:hover {
            transform: scale(1.05);
        }

    .team-image {
        width: 60%;
        height: auto;
        object-fit: cover;
    }

    .container {
        padding-top: 20px;
        padding-bottom: 50px;
    }
</style>
<div class="main-content">
    <div class="container">
        <div class="row justify-content-center">
            @foreach (var equipo in Model)
            {
                <div class="col-md-4">
                    <a asp-controller="Nba" asp-action="Detalle" asp-route-id="@equipo.IdEquipo" class="team-link">
                        <img class="team-image" src="@HelperPathProvider.MapUrlPath(equipo.Imagen, Folders.Equipos)" alt="@equipo.Nombre" />
                    </a>
                </div>
            }
        </div>
    </div>
</div>
