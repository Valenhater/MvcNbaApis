@model Usuario

<style>
    /* Estilos para el perfil de usuario */
    .profile-card {
        max-width: 600px;
        margin: 50px auto;
        padding: 30px;
        border-radius: 10px;
        background-color: #f9f9f9;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    .profile-card h2 {
        color: #333333;
        font-size: 28px;
        font-weight: bold;
        text-align: center;
    }

    .divider {
        border-top: 2px solid #333333;
        margin-top: 20px;
    }

    .profile-card dl dt {
        font-weight: bold;
        color: #555555;
    }

    .profile-card dl dd {
        color: #777777;
        margin-bottom: 15px;
    }

    .btn-primary {
        background-color: #4CAF50;
        border: none;
        border-radius: 5px;
        padding: 8px 16px; /* Ajuste del tamaño del padding */
        font-size: 16px; /* Ajuste del tamaño de fuente */
        font-weight: bold;
        color: white;
        text-decoration: none;
        transition: background-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #45a049;
    }

    .btn-danger {
        background-color: #f44336;
        border: none;
        border-radius: 5px;
        padding: 8px 16px; /* Ajuste del tamaño del padding */
        font-size: 16px; /* Ajuste del tamaño de fuente */
        font-weight: bold;
        color: white;
        text-decoration: none;
        transition: background-color 0.3s;
    }

    .btn-danger:hover {
        background-color: #da190b;
    }
</style>

<div class="container">
    <div class="profile-card">
        <h2 class="text-center">Perfil de Usuario</h2>
        <hr class="divider">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <dl class="row">
                    <dt class="col-sm-4">Nombre:</dt>
                    <dd class="col-sm-8">@Model.Nombre</dd>
                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">@Model.Email</dd>
                    <dt class="col-sm-4">Nombre Completo:</dt>
                    <dd class="col-sm-8">@Model.NombreCompleto</dd>
                    <dt class="col-sm-4">Dirección:</dt>
                    <dd class="col-sm-8">@Model.Direccion</dd>
                </dl>
            </div>
        </div>
        <div class="row justify-content-center"> <!-- Ajuste para centrar los botones -->
            <div class="col-md-6">
                <div class="d-flex justify-content-center"> <!-- Ajuste para centrar los botones -->
                    <a asp-controller="Usuarios" asp-action="EditarPerfil" asp-route-username="@Model.Nombre" class="btn btn-primary mx-2">Editar Perfil</a>
                    <form method="post" asp-controller="Usuarios" asp-action="Eliminar" onsubmit="return confirm('¿Estás seguro de que quieres eliminar tu perfil?');">
                        <input type="hidden" name="id" value="@Model.IdUsuario" />
                        <button type="submit" class="btn btn-danger mx-2">Eliminar Cuenta</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div style="margin-top:300px"> </div>
